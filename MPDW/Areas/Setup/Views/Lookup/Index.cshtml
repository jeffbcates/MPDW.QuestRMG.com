    ViewBag.Title = "Lookup Editor";
    Layout = "~/Views/Shared/_LayoutSetup.cshtml";
}

<h1>Lookup Editor</h1>

<input type="hidden" id="__frmLookupVIEW_STATE" value="@Html.Raw(Json.Encode(Model))" />
<div id="frmLookup">
</div>

<script type="text/javascript">
    var _frmLookup = null;
    var frmLookup = {
        element: 'frmLookup',
        prefix: 'lu',
        uri: '/Setup/Lookup',
        callback: cbLookupEditor,
        ctx: {
            elements: ['_questctx', '_questmm', '_questnb']
        },
        fields: [
            { name: 'Id', type: 'hidden', key: true },
            { name: 'Name', label: 'Name', required: true, maxlength: 256, size: 55 },
            { name: 'Label', label: 'Label', maxlength: 256, size: 55 },
            { name: 'Summary', label: 'Summary', maxlength: 256, size: 55 },
            { name: 'SQL', label: 'SQL', type: 'textarea', rows: 10 },
            { name: 'KeyField', label: 'Key Field', maxlength: 256, size: 55 },
            { name: 'TextFields', label: 'Text Fields', maxlength: 256, size: 55 },
            { name: 'Arguments', label: 'Arguments', maxlength: 2048, size: 55 },
            { name: 'DatabaseId', label: 'Database', type: 'select', required: true },
        ],
        operations: [
        ],
        actions: [
        ]
    }
    function cbLookupEditor(ud, d) {
    }
    $(function () {
        _frmLookup = new qrmgEditor(frmLookup);
        _frmLookup.DisplayFormMessages();
    });
</script>
